<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_objeto"
    android:background="#F5DEB3">

    <ImageView
        android:id="@+id/IVObjetoObjeto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="@font/pokemon"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:id="@+id/TVnombreObjeto" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/IVObjetoObjeto" android:textStyle="bold"/>
    <TextView
        android:text="Descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVdescripcionObjeto"
        android:textColor="@color/black"
        android:fontFamily="@font/peach"
        android:textSize="13.5dp"
        android:layout_marginTop="-4dp"
        app:layout_constraintTop_toBottomOf="@+id/TVnombreObjeto" android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/IVObjetoObjeto"
        />

</androidx.constraintlayout.widget.ConstraintLayout>